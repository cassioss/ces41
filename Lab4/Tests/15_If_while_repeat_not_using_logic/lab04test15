program AnaliseDeTexto {{{global {	logic a;}/* ERRO SEMÂNTICO ESPERADO: VARIÁVEL NÃO RELACIONAL OU LÓGICA EM FOR, WHILE OU REPEAT */procedure FuncaoTeste ()local {	int i;}
statements {    if 1 then i = 0;    
    while 1 do {        i = i + 1;    }    
    repeat
	write ("O\n");
    while 0;}/*  Modulo principal  */mainstatements {	call FuncaoTeste ();}
}}}